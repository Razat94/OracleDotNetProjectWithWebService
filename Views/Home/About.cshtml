@using OracleDotNetProjectwithWebService.Models;

@{
    ViewBag.Title = "Welcome";
    Model Viewsqldata = ViewBag.sqldata;
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
    <p> @ViewBag.Message </p>
</div>

<!-- Main layout -->
<main class="mt-1 pt-3">
    <div class="container">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < @Viewsqldata.ModelWebService.sqlList.Count; i++)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td colspan="1">@Viewsqldata.ModelWebService.sqlList[i]</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Jumbotron -->
        <section class="card wow fadeIn" style="background-image: url(https://mdbootstrap.com/img/Photos/Others/gradient1.jpg);">

            <!-- Content -->
            <div class="card-body text-white text-center py-3 px-3 my-3">

                <h1 class="mb-4">
                    <strong>Add Content</strong>
                </h1>

                <p class="mb-4">
                    <strong>
                        The table above should show the contents of the database. <br>
                        Click on the button below to add content.
                    </strong>
                </p>
                <a class="btn btn-outline-white btn-lg" href = "/Home/Form">
                    Click me to add content!
                </a>

            </div>
            <!-- End of Content -->

        </section>
        <!-- End of Jumbotron-->

    </div>
    <!-- End of class container-->
</main>
<!--End of Main layout-->